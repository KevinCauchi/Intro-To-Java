package ifDemoOne;
import java.util.Scanner;
public class ifDemoOnewithElse {
public static void main (String[] args) {
	
	Scanner scan =new Scanner(System.in);
	
	int grade, score,age;
	//Create the if statement to display You get an A if grade is at least 95
	// In Order to test an interactive grade it must be before the test condition.
	System.out.println("Enter your Test Grade");
	
	grade=scan.nextInt();
	
	if (grade>=95)
	{System.out.println("You get an A");
	}
	
	else
	{System.out.println("Sorry you need at least a 95 and your grade is " +grade);
	}
	
	
	//Create an if statement to display you get a perfect score if Exam is exactly 104
	
	System.out.println("Enter your score on the TEST:");
	score=scan.nextInt();
	if (score==104)
		
	{System.out.println("You got a Perfect Score");
	}
	
	else
	{System.out.println("You need a 104 and your score is " +score);
	}
	//Create an if statement to display you can order from the children's menu if your age is at most 12.
	
	System.out.println("Enter your age Please:");
	age=scan.nextInt();
	if (age<=12)
	{System.out.println("You can order from the kids menu");}
	
	else
	{System.out.println("Sorry you need to be 12 or younger and your age is " +age);
	}
	
	//Create an if else statement to display temperature is warm if falls between 70 & 75 inclusive.

int temperature;
System.out.println("Enter temperature as an interager");
temperature=scan.nextInt();
if (temperature>=70&&temperature<=75)
{System.out.println("Temp Is Warm");}
else
{System.out.println("Warm was coincdered between 70 & 75");}
	
	

	//Create an if else statement to display free admission if age is at most 2 or age is at least 75. 



	//Create an if else statement to display You can vote if age is at least 18 and registration is Y.

	
}
}
